<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rank_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/rank_dish_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/rank_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/rank_rest_name"
                android:layout_below="@+id/rank_dish_name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/rank_canteen_name"
                android:layout_below="@+id/rank_rest_name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/rank_count_name"
                android:layout_below="@+id/rank_canteen_name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


