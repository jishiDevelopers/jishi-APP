<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#D1EEEE"
                android:startColor="#D1EEEE"
                android:type="linear" />
            <corners
                android:radius="30dip"/>
        </shape>
    </item>

</layer-list>